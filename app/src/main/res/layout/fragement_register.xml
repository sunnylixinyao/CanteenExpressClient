<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorMain">
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/colorOfText"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/register_title"/>
            <LinearLayout
                android:layout_marginTop="80dp"
                android:id="@+id/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/name"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="姓名"
                    android:textColorHint="@color/colorOfText"
                    android:theme="@style/MyEditStyle" />
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/ID"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="学号"
                    android:textColorHint="@color/colorOfText"
                    android:theme="@style/MyEditStyle" />
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/Tel"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="电话号码"
                    android:textColorHint="@color/colorOfText"
                    android:theme="@style/MyEditStyle" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:hint="密码"
                        android:textColorHint="@color/colorOfText"
                        android:theme="@style/MyEditStyle" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/see" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/code"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:hint="密码"
                        android:textColorHint="@color/colorOfText"
                        android:theme="@style/MyEditStyle" />
                     <TextView
                         android:layout_weight="1"
                         android:text="点击获取验证码"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:id="@+id/Register_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_shape"
                    android:text="@string/register"
                    android:textColor="@color/colorOfWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/ToLogin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号，前去登录"
                android:textSize="20dp"
                android:textColor="@color/colorOfText"/>
            <LinearLayout
                android:background="@color/colorOfText"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                xmlns:android="http://schemas.android.com/apk/res/android"></LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他登录方式"
                android:textSize="20dp"
                android:textColor="@color/colorOfText"/>
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_gravity="center"
                 android:orientation="horizontal"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content">
                 <Button
                     android:background="@mipmap/regisetr_alipay"
                     android:layout_width="50dp"
                     android:layout_height="50dp"/>
                 <Button
                     android:layout_marginLeft="20dp"
                     android:background="@mipmap/register_wechat"
                     android:layout_width="50dp"
                     android:layout_height="50dp"/>
             </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>