<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@color/colorOfText"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        xmlns:android="http://schemas.android.com/apk/res/android"></LinearLayout>
    <LinearLayout
        android:id="@+id/top"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">
        <Button
            android:id="@+id/home_person"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/home_person">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:textSize="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:textColor="@color/colorOfText"
            />
        <Button
            android:id="@+id/home_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/home_search">
        </Button>
        <Button
            android:id="@+id/home_friends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/home_friends">
        </Button>

        <Button
            android:id="@+id/home_purchase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/home_purchases">
        </Button>
    </LinearLayout>
    <!--这里放置内容，以Fragment来进行切换-->
    <LinearLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:background="@color/colorOfText"
        android:orientation="vertical"
        >
    </LinearLayout>
</LinearLayout>